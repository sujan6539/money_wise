<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoneyWise" parent="Theme.MaterialComponents.Light">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="backgroundColor">@color/background_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="MySplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_icon_without_an_icon_background
        </item>
        <!--    Here   windowSplashScreenBrandingImage work target api S(Api 31) <=  -->
        <!--        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="s">@drawable/app_icon_without_an_icon_background</item>-->
        <item name="windowSplashScreenBackground">#000</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="splashScreenIconSize">300dp</item>
        <item name="postSplashScreenTheme">@style/Theme.MoneyWise</item>
    </style>


    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="shapeAppearance">@style/CutShape</item>
        <item name="android:translationZ">8dp</item>
        <item name="hintTextColor">@color/black</item>
        <item name="cornerRadius">20dp</item>
        <item name="endIconMode">clear_text</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@color/black</item>
        <item name="startIconTint">@color/black</item>
    </style>

    <style name="MaterialCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:translationZ">8dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="FillButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/CutShape</item>
        <item name="backgroundColor">?colorPrimary</item>
    </style>

    <style name="OutlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearance">@style/CutShape</item>
    </style>

    <style name="tertiaryButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="CutShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="DialogCustomTheme" parent="android:Theme.Holo.Dialog.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
    <style name="Theme.MoneyWise.Fullscreen" parent="Theme.MoneyWise">
        <item name="android:actionBarStyle">@style/Widget.Theme.MoneyWise.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.MoneyWise.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>